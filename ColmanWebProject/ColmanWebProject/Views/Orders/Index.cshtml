@model IEnumerable<ColmanWebProject.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<main class="form-signin">
    <div class="row justify-content-center">
        <div class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Orders</h1>
            <form id="ordersSearch">
                <div class="mt-3 form-group d-inline-block" style="width:20%">
                    <label class="control-label">Name:</label>
                    <input id="searchByName" type="text" min="0" class="form-control" name="from" />
                </div>

                <div class="mt-3 form-group d-inline-block" style="width:20%">
                    <label class="control-label">City:</label>
                    <input id="searchByCity" type="text" autocomplete="off" class="form-control" name="from" list="catagories" />
                </div>

                <div class="mt-3 form-group d-inline-block" style="width:20%">
                    <label class="control-label">From Price:</label>
                    <input id="searchByPriceFrom" type="number" min="0" class="form-control" name="from" />
                </div>

                <div class="mt-3 form-group d-inline-block" style="width:20%">
                    <label class="control-label">To Price:</label>
                    <input id="searchByPriceTo" type="number" min="0" class="form-control" name="to" />
                </div>

                <div class="mt-3 mb-2 form-group d-inline-block m-auto">
                    <button type="submit" class="btn btn-success"><i class="bx bx-search"></i>Search</button>
                </div>
            </form>
            <div id="partial">
                @Html.Partial("OrdersList", Model)
            </div>

        </div>
    </div>
    @if (ViewBag.ShowGraph)
    {
        <div id="container" class="shadow-lg"></div>
    }
</main>
@model ColmanWebProject.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<main>
    <div class="row justify-content-center">
        <div class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Delete Category</h1>
            <h1 class="h4 mb-3 fw-normal text-center">
                @Html.DisplayFor(model => model.SubType),  @Html.DisplayFor(model => model.Type)
            </h1>
            <div class="row justify-content-center mb-3">
                <div class="col-sm-9">
                    <label><u>DESCRIPTION: </u></label>
                </div>

                <p class="col-sm-7">
                    @Html.DisplayFor(model => model.Description)
                </p>

                <div class="text-center mt-4">
                    <strong class="text-danger">Are you sure you want to delete this category?</strong>
                </div>
            </div>

            <div class="row justify-content-center mb-3">
                <form asp-action="Delete" class="col-sm-8 col-md-7 col-lg-6 text-center">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="I WANT TO DELETE" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</main>


@model IEnumerable<ColmanWebProject.Models.Product>

    <div class="row px-5 pt-5">

        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mt-4 mt-sm-0 card-container">
                <div class="card text-center product p-4 pt-5 border-0 h-100 rounded-0">
                    <img class="img-fluid d-block mx-auto" src="~/image/pexels-philip-boakye-3428498.jpg" alt="GUITAR">
                    <div class="card-body p-4 py-0 h-xs-440p">
                        <h4 class="card-title font-weight-semi-bold mb-3 w-xl-220p mx-auto">@Html.DisplayFor(modelItem => item.Name)</h4>
                        <p class="price">@Html.DisplayFor(modelItem => item.Price)</p>
                    </div>
                    <div class="col-12">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-block">Show more details</a>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Carts" asp-action="AddToCart" asp-route-ProductId="@item.Id" asp-route-CustomerId="16" type="button" class="btn btn-outline-info btn-circle">
                            <i class="fa fa-cart-plus fa-xl"></i>
                        </a>
                        <a asp-controller="WishLists" asp-action="AddToWishList" asp-route-ProductId="@item.Id" asp-route-CustomerId="16" type="button" class="btn btn-outline-info btn-circle">
                            <i class="fa fa-heart fa-xl"></i>
                        </a>

                        @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0 && Context.User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-outline-info btn-circle">
                                <i class="fa fa-pencil fa-xl"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-outline-info btn-circle">
                                <i class="fa fa-trash fa-xl"></i>
                            </a>
                        }
                    </div>

                </div>
            </div>
        }
    </div>

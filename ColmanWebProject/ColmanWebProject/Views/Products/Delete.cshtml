@model ColmanWebProject.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<main>
    <div class="row justify-content-center">
        <div class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <div class="row g-0">
                <div class="col-md-4">
                    @if (Model.Image != null)
                    {
                        string img = Convert.ToBase64String(Model.Image);
                        <img src="data:image/png;base64,@img" width="318" height="234" alt="@Model.Name">
                    }
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Delete @Html.DisplayFor(model => model.Name)</h5>
                        <p class="card-text"><b>Description :</b> @Html.DisplayFor(model => model.Description)</p>
                        <p class="card-text"><b>Price :</b> @Html.DisplayFor(model => model.Price)</p>                        
                        <p class="card-text"><b>Stock :</b> @Html.DisplayFor(model => model.Stock)</p>
                        <p class="card-text"><b>Category :</b> @Html.DisplayFor(model => model.Category.Type)</p>
                        <p class="card-text"><b>Sub Category :</b> @Html.DisplayFor(model => model.Category.SubType)</p>
                        <div class="text-center mt-4">
                            <strong class="text-danger">Are you sure you want to delete this product?</strong>
                        </div>
                        <div class="row justify-content-center mb-3">
                            <form asp-action="Delete" class="col-sm-8 col-md-7 col-lg-6 text-center">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="I WANT TO DELETE" class="btn btn-danger" /> |
                                <a asp-action="ManageProducts">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>

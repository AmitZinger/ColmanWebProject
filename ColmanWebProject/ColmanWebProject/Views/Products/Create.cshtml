@model ColmanWebProject.Models.Product

@{
    ViewData["Title"] = "Create";
}

@*<div class="row">
    <div class="col-md-4">*@
<main class="form-signin">
    <div class="row justify-content-center">
        <form asp-action="Create" class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Add new product</h1>
            <div class="row justify-content-center">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label mb-1 text-left">NAME:</label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label mb-1 text-left">PRICE:</label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label mb-1 text-left">STOCK:</label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Stock" class="form-control" />
                        </div>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label mb-1 text-left">DESCRIPTION:</label>
                        <div class="input-group has-validation mb-3">
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add product" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
       </div>
    </main>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

@model ColmanWebProject.Models.Product


@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div id="create" class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addPositionsLabel">ADD PRODUCTS</h5>
            <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Create">
                @Html.AntiForgeryToken()
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label mb-1 text-left">NAME: </label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label mb-1 text-left">PRICE: </label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="control-label mb-1 text-left">STOCK: </label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="Stock" class="form-control" />
                    </div>
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label mb-1 text-left">DESCRIPTION: </label>
                    <div class="input-group has-validation mb-3">
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label mb-1 text-left">CATEGORY: </label>
                    <div class="input-group has-validation mb-3">
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label mb-1 text-left">IMAGE: </label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="ImageFile" type="file" class="form-control" />
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal" id="saveProductAdd">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous">


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model ColmanWebProject.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<hr />
<main>
    <div class="row justify-content-center">
        <form asp-action="Edit" enctype="multipart/form-data" class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Edit Product</h1>

            <div class="row justify-content-center">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label mb-1 text-left">NAME:</label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label mb-1 text-left">PRICE:</label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label mb-1 text-left">STOCK:</label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Stock" class="form-control" />
                        </div>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label mb-1 text-left">DESCRIPTION:</label>
                        <div class="input-group has-validation mb-3">
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label mb-1 text-left">CATEGORY:</label>
                        <div class="input-group has-validation mb-3">
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        </div>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label mb-1 text-left">IMAGE:</label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="ImageFile" class="form-control" />
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group row justify-content-center mb-3">
                        <div class="col-6 col-sm-7 col-md-12 col-lg-9 text-center">
                            <input type="submit" value="SAVE CHANGES" class="btn btn-primary" /> |
                            <a asp-action="ManageProducts">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ColmanWebProject.Models.Customer

@{
    ViewData["Title"] = "Login";
}

@*<h1>Login</h1>*@

<hr />
@*<div class="row">
    <div class="col-md-4">*@
<main class="form-signin">
    <div class="row justify-content-center">
        <form asp-action="Login" class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Sign in</h1>

            <div class="row justify-content-center">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label mb-1 text-left">EMAIL: </label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label mb-1 text-left">PASSWORD: </label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center mb-3">
                        <input type="submit" value="Sign in" class="btn btn-outline-success" />
                    </div>
                    </div></div>
                    <div class="text-center mb-3">
                        <a href="" class="text-dark">forget password?</a>
                    </div>

                    <h1 class="h3 mb-3 fw-normal text-center">Haven't signed up yet?</h1>
                    <div class="row justify-content-center mb-3">
                        <div class="col-sm-4 text-center">
                            <a class="btn btn-outline-success" asp-area="" asp-controller="Customers" asp-action="Register">Sign up</a>
                            <button type="button" class="btn btn-primary">Sign up With Facebook</button>
                        </div>
                    </div>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error</div>
        }

    </div>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

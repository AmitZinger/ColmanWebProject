@model ColmanWebProject.Models.Customer

@{
    ViewData["Title"] = "Register";
}

@*<h1>Register</h1>*@

<hr />
@*<div class="row">
    <div class="col-md-4">*@
<main class="form-signin">
    <div class="row justify-content-center">
        <form asp-action="Register" class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Register</h1>

            <div class="row justify-content-center">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">NAME: </label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">LAST NAME: </label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="LastName" class="form-control" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">EMAIL: </label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">PHONE: </label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">PASSWORD: </label>
                        <div class="input-group has-validation mb-3">
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center mb-3">
                        <input type="submit" value="Register" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger">@ViewBag.Error</div>
            }

            <div class="text-center mb-3">
                Already registered? <a asp-action="Login">Click here</a> to login
            </div>
        </form>
    </div>
    </div>
    </div>
</main>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

@model ColmanWebProject.Models.Customer

@{
    ViewData["Title"] = "SignIn";
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!doctype html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</head>

<body>

    <main class="form-signin">
        <div class="row justify-content-center">
            <form asp-action="SignIn" class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">

                <h1 class="h3 mb-3 fw-normal text-center">Sign in</h1>

                <div class="row justify-content-center">
                    <div class="col-6">

                        <div class="form-group">
                            <label asp-for="Email" class="mb-1 text-left">EMAIL: </label>
                            <div class="input-group has-validation mb-2">
                                <input asp-for="Email" type="text" class="form-control" id="email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Password" class="mb-1 text-left">PASSWORD: </label>
                            <div class="input-group has-validation mb-3">
                                <input asp-for="Password" type="text" class="form-control" id="password">
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mb-3">
                            <input type="submit" class="btn btn-outline-success">Sign in</input>
                        </div>
                        <div class="text-center mb-3">
                            <a href="" class="text-dark">forget password?</a>
                        </div>
                    </div>
                </div>

                <h1 class="h3 mb-3 fw-normal text-center">Haven't signed up yet?</h1>
                <div class="row justify-content-center mb-3">
                    <div class="col-sm-4 text-center">
                        <button type="button" class="btn btn-outline-success">Sign up</button>
                        <button type="button" class="btn btn-primary">Sign up With Facebook</button>
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="text-danger">@ViewBag.Error</div>
                }
            </form>

        </div>
    </main>
</body>

</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model ColmanWebProject.Models.Store

@{
    ViewData["Title"] = "Delete";
}

<main>
    <div class="row justify-content-center">
        <div class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Delete Store</h1>
            <div class="row justify-content-center">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Lontitude)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Lontitude)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Latitude)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Latitude)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OpeningHour)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OpeningHour)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClosingHour)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClosingHour)
                    </dd>
                </dl>
                <div class="text-center mt-4">
                    <strong class="text-danger">Are you sure you want to delete this store?</strong>
                </div>
            </div>
            <div class="row justify-content-center mb-3">
                <form asp-action="Delete" class="col-sm-8 col-md-7 col-lg-6 text-center">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="I WANT TO DELETE" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</main>
@model ColmanWebProject.Models.Store

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<div id="create" class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addPositionsLabel">ADD STORE</h5>
            <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Create">
                @Html.AntiForgeryToken()
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                <div class="form-group">
                    <label asp-for="Latitude" class="control-label mb-1 text-left">LATITUDE:</label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="Latitude" class="form-control" />
                    </div>
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lontitude" class="control-label mb-1 text-left">LONTITUDE:</label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="Lontitude" class="form-control" />
                    </div>
                    <span asp-validation-for="Lontitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OpeningHour" class="control-label mb-1 text-left">OPENING HOUR:</label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="OpeningHour" class="form-control" />
                    </div>
                    <span asp-validation-for="OpeningHour" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClosingHour" class="control-label mb-1 text-left">CLOSING HOUR:</label>
                    <div class="input-group has-validation mb-3">
                        <input asp-for="ClosingHour" class="form-control" />
                    </div>
                    <span asp-validation-for="ClosingHour" class="text-danger"></span>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal" id="saveStoreAdd">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous">


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

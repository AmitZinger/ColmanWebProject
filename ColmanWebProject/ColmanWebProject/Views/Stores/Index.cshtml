@model IEnumerable<ColmanWebProject.Models.Store>

@{
    ViewData["Title"] = "Index";
}

<main class="form-signin">
    <div class="row justify-content-center">
        <div class="card col-9 pb-5 mt-4 p-3 bg-white shadow-lg">
            <h1 class="h3 mb-3 fw-normal text-center">Stores</h1>
            <button class="btn btn-primary col-sm-12 col-md-4 col-lg-3" asp-action="Create"
                     id="addStoreBtn">
                Add new store
            </button>
            <br />
            <div class="modal fade" id="add-store-contact" tabindex="-1" role="dialog" aria-labelledby="addLabel" aria-hidden="true">
                <div id="AddStoreContent">
                </div>
            </div>
            <div id="partialManageStore">
                @Html.Partial("StoresList", Model)
            </div>
        </div>
    </div>
</main>